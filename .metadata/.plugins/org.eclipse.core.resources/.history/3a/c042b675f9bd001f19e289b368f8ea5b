package Client;

import java.sql.*;
import java.util.Scanner;
import Models.*;

public class Client {
	public static void LoginCustomer() throws SQLException {
        boolean success = false;
        System.out.println("Welcome to the Console Login Page\n");
        Scanner scanner = new Scanner(System.in);
        Customer customer = new Customer(null, null);
        do
        {
        	System.out.print("Enter your email: ");
            String username = scanner.nextLine();

            System.out.print("Enter your password: ");
            String password = scanner.nextLine();
            
            if(!username.isEmpty() && !password.isEmpty()) {
            	success = true;
            	customer.setEmail(username);
            	customer.setPassword(password);
            }
        } while(success == false);
        
        //TODO credenziale sbagliata non viene richiata la funzione login
     
        scanner.close();
    }
	
	public static void main(String args[])
    {  
		System.out.printf(" ---------------\n");
        System.out.printf("| General Store |");
        System.out.printf("\n ---------------\n");
        try {
			LoginCustomer();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    }

}
